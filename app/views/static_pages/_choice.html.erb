<% if current_user.voted?(choice) %>
  <button class="voted">
    <%= link_to choice.name, choice_vote_path(choice.id), method: :delete, remote: true %>
  </button>
<% else %>
  <button class="vote">
    <%= link_to choice.name, choice_vote_path(choice.id), method: :post, remote: true %>
  </button>
<% end %>
<%= link_to "削除", choice_path(choice.id), method: :delete, data: { confirm: '本当に削除して良いですか？', cancel: 'やめる', title: '削除確認' } %>