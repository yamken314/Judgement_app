<%= pie_chart micropost.choices.joins(:votes).map { |m| [m.name, m.votes.count] }.to_h, donut: true, messages: {empty: "投票はありません"} %>
<% micropost.choices&.each do |choice| %>
  <table>
    <tr>
      <th><%= choice.name %></th>
        <td><%= choice.votes.count %></td>
      </tr>
  </table>
<% end %>