<h1>All users</h1>
<% @users.each do |user| %>
  <div class="follow_list">
    <p class="gravatar_follow">
      <% if user.avatar.attached? %>
        <%= image_tag user.avatar.variant(resize: "50x50").processed, class: "avatar " %>
      <% else %>
        <%= gravatar_for user %>
      <% end %>
    </p>
    <h4 class="user"><%= link_to user.name, user, data: { "turbolinks" => false } %></h4>
  </div>
<% end %>
<%= will_paginate %>