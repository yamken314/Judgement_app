<div class="back-1 col-md-4 col-md-offset-2">
  <%= form_with model: @micropost, local: true do |form|%>
    <%= render 'shared/error_messeges', object: form.object%>
      <div class="field col-md-12">
        <span class="picture">
          <%= form.file_field :images, multiple: true %>
        </span>
        <%= form.text_area :content, placeholder: "コメントを記入して下さい",class: "content" %>
      </div>
    <%= form.fields_for :choices do |choice_fields| %>
      <div class="col-md-6">
        <%= choice_fields.text_area :name, class: "number" %>
      </div>
    <% end %>
    <div class="judgement-btn">
        <%= form.submit "Judgement?", class: "btn-border" %>
    </div>
  <% end %>
</div>


