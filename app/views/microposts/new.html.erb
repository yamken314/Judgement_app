<div class="back-1 col-md-4 col-md-offset-2 masonry">
  <%= form_with model: @micropost, local: true do |form|%>
    <%= render 'shared/error_messeges', object: form.object%>
    <div class="field col-md-12">
        <span class="picture">
          <%= form.file_field :images, multiple: true %>
        </span>
      <%= form.text_area :content, placeholder: "コメントを記入して下さい",class: "content" %>
    </div>
    <div class="No-1 col-md-6">
      <%= form.text_area :vote_1, placeholder: "No-1",class: "number" %>
    </div>
    <div class="No-2 col-md-6">
      <%= form.text_area :vote_2, placeholder: "No-2",class: "number" %>
    </div>
    <div class="No-3 col-md-6">
      <%= form.text_area :vote_3, placeholder: "No-3",class: "number" %>
    </div>
    <div class="No-4 col-md-6">
      <%= form.text_area :vote_4, placeholder: "No-4",class: "number" %>
    </div>
    <div class="judgement-btn">
        <%= form.submit "Judgement?", class: "btn-border" %>
    </div>
  <% end %>
</div>


