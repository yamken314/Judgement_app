<%= render 'shared/stats', user: @micropost.user %>
<div class="container_show">
  <div class="<%= @colors.sample %>">
    <% if current_user?(@micropost.user) %>
      <span class="edit"><%= link_to '編集', edit_micropost_path, class: "btn-border-sm"%></span>
    <% end %>
    <div class= "user_info">
      <%= gravatar_for @micropost.user %>
      <span class="user"><%= @micropost.user.name %></span>
    </div>
      <% if @micropost.images.attached? %>
        <% @micropost.images.each do |image| %>
          <div class="picture">
            <%= image_tag image, class: "img" %>
          </div>
        <% end %>
      <% end %>
    <div class="comment">
      <p><%= @micropost.content %></p>
    </div>
    <% @choice.each do |choice| %>
      <div class="choice_show_row">
        <div id="choice_<%= choice.id %>">
          <%= render 'static_pages/choice', choice: choice %>
          <% if choice.micropost.user != current_user && choice.user == current_user %>
            <span class="edit"><%= link_to '編集', edit_choice_path(choice.id), class: "btn-border-sm"%></span>
          <% end %>
        </div>
      </div>
    <% end %>
    <%= form_with model: @micropost, local: true do |f|%>
      <div id="detail-association-insertion-point">
        <div class="judgement-btn">
          <%= link_to_add_association 'ボタンを追加', f, :choices,
          class: "btn-border-sm",
          data: {
          association_insertion_node: '#detail-association-insertion-point',
          association_insertion_method: 'append' }
           %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="choice" id="chart-<%= @micropost.id %>">
    <%= render 'users/pie_chart', micropost: @micropost %>
  </div>
</div>